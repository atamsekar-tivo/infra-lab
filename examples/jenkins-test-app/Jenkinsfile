pipeline {
    agent {
        kubernetes {
            yaml '''
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: python
    image: python:3.11-slim
    command:
    - cat
    tty: true
'''
        }
    }
    
    stages {
        stage('Checkout') {
            steps {
                container('python') {
                    echo 'Checking out code...'
                    // Code is already checked out by Jenkins
                    sh 'ls -la'
                }
            }
        }
        
        stage('Setup') {
            steps {
                container('python') {
                    echo 'Setting up Python environment...'
                    sh 'python3 --version'
                    sh 'which python3'
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                container('python') {
                    echo 'Running unit tests...'
                    dir('examples/jenkins-test-app') {
                        sh 'python3 test_app.py'
                    }
                }
            }
        }
        
        stage('Run Application') {
            steps {
                container('python') {
                    echo 'Running the application...'
                    dir('examples/jenkins-test-app') {
                        sh 'python3 app.py'
                    }
                }
            }
        }
        
        stage('Build Summary') {
            steps {
                echo '========================================='
                echo 'Build completed successfully!'
                echo '========================================='
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline completed successfully! ✅'
        }
        failure {
            echo 'Pipeline failed! ❌'
        }
        always {
            echo 'Cleaning up...'
        }
    }
}
